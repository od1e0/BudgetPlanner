<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@dashboard-styles.css" spacing="20" alignment="CENTER">
    <children>
        <Label text="Общий баланс: " styleClass="dashboard-label"/>
        <Label fx:id="totalBalanceLabel" text="10000.00" styleClass="balance-label"/>
        <HBox alignment="CENTER" spacing="50">
            <VBox alignment="CENTER">
                <Label text="Доходы" styleClass="dashboard-small-label"/>
                <Label fx:id="incomeLabel" text="5000.00" styleClass="income-label"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Расходы" styleClass="dashboard-small-label"/>
                <Label fx:id="expenseLabel" text="3000.00" styleClass="expense-label"/>
            </VBox>
        </HBox>
    </children>
</VBox>

