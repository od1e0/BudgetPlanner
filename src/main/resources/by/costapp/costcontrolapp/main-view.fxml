<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@main-styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="by.costapp.costcontrolapp.MainController">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="header-bar">
            <Label text="Семейный кошелек" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Выйти" onAction="#logout"/>
        </HBox>
    </top>

    <left>
        <VBox alignment="CENTER" spacing="20" prefWidth="200" styleClass="side-bar">
            <Button text="Дашборд" onAction="#showDashboard"/>
            <Button text="Транзакции" onAction="#showTransactions"/>
            <Button text="Аналитика" onAction="#showAnalytics"/>
            <Button text="Настройки" onAction="#showSettings"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane">
            <!-- Динамически загружаемый контент -->
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="footer-bar">
            <Label text="Баланс: " />
            <Label fx:id="balanceLabel" text="0.00" styleClass="balance-label"/>
        </HBox>
    </bottom>
</BorderPane>